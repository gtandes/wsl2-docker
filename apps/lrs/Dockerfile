FROM yetanalytics/lrsql:v0.6.3

ENV LRSQL_ALLOW_ALL_ORIGINS true
ENV LRSQL_ADMIN_USER_DEFAULT admin
ENV LRSQL_ADMIN_PASS_DEFAULT admin
# ENV LRSQL_LOG_LEVEL ALL
# ENV LRSQL_KEY_ENABLE_SELFIE false
ENV LRSQL_ENABLE_JSONB true
ENV LRSQL_ENABLE_HTTP2 false
ENV LRSQL_API_KEY_DEFAULT my_key
ENV LRSQL_API_SECRET_DEFAULT my_secret
ENV LRSQL_DB_SCHEMA lrsql

EXPOSE 8080

CMD ["/lrsql/bin/run_postgres.sh"]